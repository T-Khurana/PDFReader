    <LinearLayout
            android:id="@+id/pdfLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.Toolbar
                android:id="@+id/top_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/doc_name"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="32sp">
            </TextView>
            <Button
                    android:id="@+id/select_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="200dp"
                    android:background="@drawable/mouse_drawable"
                    android:scaleX=".75"
                    android:scaleY=".75">
            </Button>
            <Button
                android:id="@+id/draw_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/pencil_drawable"
                android:scaleX=".75"
                android:scaleY=".75">
            </Button>
            <Button
                    android:id="@+id/eraser_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/eraser_drawable"
                    android:scaleX=".75"
                    android:scaleY=".75">
            </Button>
            <Button
                    android:id="@+id/highlighter_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/highlighter_drawable"
                    android:scaleX=".75"
                    android:scaleY=".75">
            </Button>
            <Button
                    android:id="@+id/undo_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/undo"
                    android:scaleX=".75"
                    android:scaleY=".75">
            </Button>
            <Button
                    android:id="@+id/redo_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/redo"
                    android:scaleX=".75"
                    android:scaleY=".75">
            </Button>
            <Button
                    android:id="@+id/previous_button"
                    android:layout_width="225dp"
                    android:layout_height="50dp"
                    android:background="@drawable/previous"
                    android:scaleX=".15"
                    android:scaleY=".80"
                    android:layout_marginStart="0dp">
            </Button>
            <TextView
                    android:id="@+id/page_number"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="26sp">
            </TextView>
            <Button
                    android:id="@+id/next_button"
                    android:layout_width="225dp"
                    android:layout_height="50dp"
                    android:background="@drawable/next"
                    android:scaleX=".15"
                    android:scaleY=".80">
            </Button>
        </androidx.appcompat.widget.Toolbar>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/pdf"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
    />

    <LinearLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity ="center">

    </LinearLayout>

</LinearLayout>